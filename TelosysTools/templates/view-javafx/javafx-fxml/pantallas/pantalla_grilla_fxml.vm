<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.cell.*?>

<fx:root type="javafx.scene.layout.Pane" xmlns:fx="http://javafx.com/fxml">
	<children>
		<BorderPane fx:id="pnlBorder" prefHeight="370.0" prefWidth="600.0">                  
			<center>
				<TableView fx:id="tbl${entity}" prefHeight="238.0" prefWidth="600.0" BorderPane.alignment="CENTER">
					<columns>
#foreach($attribute in $entity.attributes)
#if($attribute.isIntegerType()) 
 						<TableColumn fx:id="${attribute.name}" prefWidth="50.0" text="%pantalla.grilla.col.${attribute.name}" >
#end
#if($attribute.isStringType())
						<TableColumn fx:id="${attribute.name}" prefWidth="150.0" text="%pantalla.grilla.col.${attribute.name}" >
#end
#if($attribute.type == "BigDecimal")
						<TableColumn fx:id="${attribute.name}" prefWidth="50.0" text="%pantalla.grilla.col.${attribute.name}" >
#end
 						<cellValueFactory>
			                <PropertyValueFactory property="${attribute.name}" />
			            </cellValueFactory>
		      		    </TableColumn>	 
#end                             
					</columns>
				</TableView>
			</center>
		</BorderPane>
	</children>
</fx:root>